{% extends 'base.html.twig' %}

{% block title %}Online Shop{% endblock %}

{% block style %}"css/login.css"{% endblock %}

{% block content %}
    <div class="login-form__container">
        <form class="login-form login">
            <label for="username"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="username" required>

            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" required>

            <button type="submit"><a>Login</a></button>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>

            <div class="login__error-message"></div>
            <span class="login__sign-up-button">Don't have account yet? <a href="/registration">Sign Up</a></span>
        </form>
    </div>
{% endblock %}
